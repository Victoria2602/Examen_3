CREATE TABLE tabla_a(
	id NUMBER(10),
	nombre VARCHAR(50),
	precio NUMBER(10),
	num_tipo NUMBER(10),
	num_mar NUMBER(10));
CREATE TABLE tabla_b(
	id_tipo NUMBER(10),
	tipo VARCHAR(50));
CREATE TABLE tabla_c(
	id NUMBER(10),
	marca VARCHAR(50));

	--Tabla extra--
CREATE TABLE tabla_d(
dato VARCHAR (100));
	--Tabla extra--
	
	
	--Drop--
DROP TABLE tabla_a;
DROP TABLE tabla_b;
DROP TABLE tabla_c;
DROP TABLE tabla_d;
	--Drop--
	
	
