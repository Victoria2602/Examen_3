	--Datos tabla_c, datos que no se encuentran en cafeteria--
	
	--Secuencia para incremento--
CREATE SEQUENCE sec_incremento_id
	START WITH 1
	INCREMENT BY 1
	MAXVALUE 100
	MINVALUE 1;
	--Secuencia para incremento--
	
	
	--Creación de Trigger para tabla_b--
CREATE OR REPLACE TRIGGER tr_b
	BEFORE INSERT on tabla_a
	FOR EACH ROW
	BEGIN 
IF: new.num_tipo = 1 THEN
	INSERT INTO tabla_b values (sec_incremento_id.nextval, 'Comida');
END IF;
IF: new.num_tipo = 2 THEN
	NSERT INTO tabla_b values (sec_incremento_id.nextval, 'Frituras');
END IF;
IF: new.num_tipo = 3 THEN
	NSERT INTO tabla_b values (sec_incremento_id.nextval, 'Agua');
END IF;
IF: new.num_tipo = 4 THEN
	NSERT INTO tabla_b values (sec_incremento_id.nextval, 'Postres');
END IF;

	DROP TRIGGER tr_b;
	--Creación de Trigger para tabla_b--
	
	
	--Secuencia para incremento--
CREATE SEQUENCE sec_incremento_ids
	START WITH 1
	INCREMENT BY 1
	MAXVALUE 100
	MINVALUE 1;
	--Secuencia para incremento--

	--Creación de Trigger para tabla_b--
CREATE OR REPLACE TRIGGER tr_c
	BEFORE INSERT on tabla_a
	FOR EACH ROW 
	BEGIN
IF: new.num_mar = 1 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Cafeteria');
END IF;
IF: new.num_mar = 2 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Sabritas');
END IF;
IF: new.num_mar = 3 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Barcel');
END IF;
IF: new.num_mar = 4 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Bimbo');
END IF;
IF: new.num_mar = 5 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Bonafont');
END IF;
IF: new.num_mar = 6 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Epura');
END IF;
IF: new.num_mar = 7 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Cocacola');
END IF;
IF: new.num_mar = 8 THEN
INSERT INTO tabla_c values (sec_incremento_ids.nextval, 'Dulces');
END IF;
	--Creación de Trigger para tabla_b--

	--Creación de Trigger de producto con vitamina T--
CREATE OR REPLACE TRIGGER tr_d
BEFORE INSERT
ON tabla_a
FOR EACH ROW
WHEN (new.nombre like 'T%')
BEGIN
INSERT INTO tabla_d values ('Se insertó un producto con la vitamina T con el nombre: ' || :new.nombre);
END tr_d;
	--Creación de Trigger de producto con vitamina T--
	
	--CREACIÓN DE JOINS--
SELECT nombre, precio, tipo, marca FROM tabla_a full JOIN tabla_b.tipo ON id_tipo = num_tipo
FULL JOIN tabla_c ON id_marca = num_mar;

SELECT * FROM tabla_a INNER JOIN tabla_c ON marca = 'Cafeteria' WHERE id_marca = num_mar;

SELECT * FROM tabla_1 LEFT JOIN tabla_b ON id_tipo = num_tipo WHERE id IS NULL;

SELECT * FROM tabla_a RIGHT JOIN tabla_c on id_marca = num_mar;

SELECT * FROM tabla_a FULL JOIN tabla_b.tipo ON Id_tipo = num_tipo  
FULL JOIN tabla_c ON id_marca = num_mar WHERE id IS NULL;

SELECT * FROM tabla_a FULL tabla_b ON id_tipo = num_tipo 
FULL JOIN tabla_c ON id_marca = num_marca WHERE nombre like 'T%';
	--CREACIÓN DE JOINS--

-----------------------------------
CREATE OR REPLACE VIEW productos AS
SELECT nombre, marca FROM tabla_a FULL JOIN tabla_c ON id_marca = num_mar;

SELECT * FROM productos;
-----------------------------------
